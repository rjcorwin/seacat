{
  "name": "@seacat/client",
  "version": "0.1.0",
  "description": "Seacat - Cozy multiplayer sailing game with cats",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "build": "tsc && npm run bundle",
    "build:watch": "tsc --watch",
    "bundle": "esbuild dist/renderer.js --bundle --outfile=dist/renderer.bundle.js --format=cjs --platform=node --external:electron",
    "package": "electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:linux:docker": "./build-linux-docker.sh",
    "deploy:steamdeck": "./deploy-to-steamdeck.sh"
  },
  "author": "MEW Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@mew-protocol/mew": "^0.6.2",
    "howler": "^2.2.3",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/node": "^20.10.6",
    "canvas": "^3.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mew.world",
    "productName": "Seacat",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "index.html"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Game",
      "desktop": {
        "Name": "Seacat",
        "Comment": "Cozy multiplayer sailing game with cats",
        "Categories": "Game;ActionGame;"
      }
    }
  },
  "optionalDependencies": {
    "phaser3spectorjs": "^0.0.8"
  }
}
